<server description="MicroProfile server">
    <featureManager>
        <feature>microProfile-4.1</feature>
        <feature>jpa-2.2</feature>
        <feature>jdbc-4.2</feature>
        <feature>jndi-1.0</feature>
    </featureManager>

    <httpEndpoint id="defaultHttpEndpoint"
                  host="*"
                  httpPort="9080"
                  httpsPort="9443" />

    <dataSource id="h2ds" jndiName="jdbc/h2mem">
        <jdbcDriver libraryRef="H2Lib"/>
        <properties
                URL="jdbc:h2:mem:testdb"
                user="sa"
                password=""/>
    </dataSource>

    <library id="H2Lib">
        <fileset dir="${shared.resource.dir}" includes="h2-*.jar"/>
    </library>
</server>